@model NewsFeedVn.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Backend/Layout/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @class = "product-form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="product-tab-list tab-pane" id="reviews">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <h2 class="">Create</h2>
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                    <hr />
                    <div class="review-content-section">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="devit-card-custom">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="text-center">
                                        <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


