@model NewsFeedVn.Models.UserViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Backend/Layout/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { @class = "product-form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="product-tab-list tab-pane" id="reviews">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <h2 class="">Edit</h2>
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                    <hr />
                    <div class="review-content-section">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="devit-card-custom">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.DropDownList("Role", Model.RolesList, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="text-center">
                                        <input type="submit" value="Edit" class="btn btn-primary waves-effect waves-light" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
