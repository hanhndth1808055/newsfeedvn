@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    if (controller == "Admin" || controller == "Home" || controller == "Account" || controller == "Manage")
    {
        cLayout = "~/Views/Backend/Layout/_Layout.cshtml";
    }
    else
    {
        cLayout = "~/Views/Frontend/Layout/_Layout.cshtml";
    }
    Layout = cLayout;
}