@model NewsFeedVn.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Frontend/Layout/_Layout.cshtml";
}

@section AddCss{
    <link rel="stylesheet" type="text/css" href="~/avision/styles/register.css">
}

<!-- Home -->

<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="../../avision/images/regular.jpg" data-speed="0.8"></div>
    <div class="home_content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Post Comment -->
                    <div class="post_comment">
                        <div class="contact_form_container">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Create a new account.</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control contact_input contact_input_emai", placeholder = "Your Email" })

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control contact_input contact_input_emai", placeholder = "Password" })
                                
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control contact_input contact_input_emai", placeholder = "Your User Name" })

                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control contact_input contact_input_emai", placeholder = "Confirm Password" })

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-12">
                                        <input type="submit" class="contact_button" value="Register" />
                                    </div>
                                </div>
                            }

                            @* <form action="#"> *@
                            @*     <input type="text" class="contact_input contact_input_name" placeholder="Your Name" required="required"> *@
                            @*     <input type="email" class="contact_input contact_input_email" placeholder="Your Email" required="required"> *@
                            @*     <textarea class="contact_text" placeholder="Your Message" required="required"></textarea> *@
                            @*     <button type="submit" class="contact_button">Send Message</button> *@
                            @* </form> *@
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Addscripts{
    <script src="~/avision/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/avision/js/contact.js"></script>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

