@model NewsFeedVn.Models.ViewCategoryModel
@{
    int[] arr1 = new int[] { 0, 2, 3, 6, 14, 15, 17, 20 };
    int[] arr2 = new int[] { 1, 7, 8, 12, 13, 16, 21, 22 };
    int[] arr3 = new int[] { 4, 5, 11, 18, 19 };
    int[] arr4 = new int[] { 9, 10, 23, 24 };
    for (int i = 0; i < 25; i++)
    {
        if (Array.IndexOf(arr1, i) > -1)
        {
            <!-- Small Card With Image 0-->
            <div class="card card_small_with_image grid-item">
                <img class="card-img-top" src="~/avision/images/post_10.jpg" alt="">
                <div class="card-body">
                    <div class="card-title card-title-small"><a href="/Client/Post?id=@Model.Articles[i].Id">@Model.Articles[i].Title</a></div>
                    <small class="post_meta"><a href="#">Katy Liu</a><span>@Model.Articles[i].CreatedAt</span></small>
                </div>
            </div>
        }
        else if (Array.IndexOf(arr2, i) > -1)
        {
            <!-- Small Card Without Image 1-->
            <div class="card card_default card_small_no_image grid-item">
                <div class="card-body">
                    <div class="card-title card-title-small"><a href="/Client/Post?id=@Model.Articles[i].Id">@Model.Articles[i].Title</a></div>
                    <small class="post_meta"><a href="#">Katy Liu</a><span>@Model.Articles[i].CreatedAt</span></small>
                </div>
            </div>
        }
        else if (Array.IndexOf(arr3, i) > -1)
        {
            <!-- Small Card With Background 4-->
            <div class="card card_default card_small_with_background grid-item">
                <div class="card_background" style="background-image:url(../../avision/images/post_11.jpg)"></div>
                <div class="card-body">
                    <div class="card-title card-title-small"><a href="/Client/Post?id=@Model.Articles[i].Id">@Model.Articles[i].Title</a></div>
                    <small class="post_meta"><a href="#">Katy Liu</a><span>@Model.Articles[i].CreatedAt</span></small>
                </div>
            </div>
        }
        else if (Array.IndexOf(arr4, i) > -1)
        {
            <!-- Default Card With Background 9-->
            <div class="card card_default card_default_with_background grid-item">
                <div class="card_background" style="background-image:url(../../avision/images/post_12.jpg)"></div>
                <div class="card-body">
                    <div class="card-title card-title-small"><a href="/Client/Post?id=@Model.Articles[i].Id">@Model.Articles[i].Title</a></div>
                </div>
            </div>
        }
    }
}
